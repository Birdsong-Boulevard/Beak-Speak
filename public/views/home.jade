doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='./styles/style.css')
    script(type='module' src='./scripts/index.js')
    title Bird Speak
  body
    nav#main-nav
    main
      h1 BIRD SPEAK

  h1 Checkout the latest 15 posts!
  mixin post-list(post)
    div
      h1
        a(href=`home/posts/${post.post_id}`) #{post.species}
      p #{post.location}, #{post.date}
      p Confidence rating of: #{post.rating}/10 (#{post.votes} votes)
      img(src=post.img_url)
      p= post.caption

  for each in all
    +post-list(each)